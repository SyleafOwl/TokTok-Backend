// Prisma schema para TokTok
// Provider: PostgreSQL

generator client {
  provider = "prisma-client-js"
  // Salida obligatoria para el despliegue: genera el cliente en src/generated
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  videos Video[]
}

model Video {
  id    Int    @id @default(autoincrement())
  title String
  url   String
  likes Int    @default(0)

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

// Nota: En Prisma v6 la URL debe estar en este schema (env(DATABASE_URL)).
// Si actualizas a Prisma v7, puedes moverla a prisma.config.ts.
