// Prisma schema para TokTok
// Provider: PostgreSQL


generator client {
  provider = "prisma-client-js"
  // Salida obligatoria para el despliegue: genera el cliente en src/generated
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  password String

  videos  Video[]
}

model Video {
  id     Int    @id @default(autoincrement())
  title  String
  url    String
  likes  Int    @default(0)

  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
// Nota: En Prisma v6 la URL debe estar en este schema (env(DATABASE_URL)).
// Nota: En Prisma v6 la URL debía estar en este schema (env(DATABASE_URL)).
// En Prisma v7 elimina `url` del schema.prisma: mueve la URL de conexión para Migrate a prisma.config.ts
// y, al instanciar PrismaClient, pasa `adapter` para una conexión directa o `accelerateUrl` para Accelerate.
