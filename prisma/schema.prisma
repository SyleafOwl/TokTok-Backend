// Prisma schema para TokTok
// Provider: PostgreSQL

generator client {
  provider = "prisma-client-js"
  // Salida obligatoria para el despliegue: genera el cliente en src/generated
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rol {
  visitante
  creador
}

model User {
  id       String  @id @default(cuid())
  nombre   String  @unique
  rol      Rol
  password String
  contacto String?
  pet      Pet?

  // Relaciones inversas
  videos          Video[]
  streamSessions  StreamSession[]
  streamerMetrics StreamerMetrics?
  audienceLevels  AudienceLevel[]
  giftsReceived   Gift[]           @relation("ReceiverUser")
  giftsSent       Gift[]           @relation("SenderUser")
  comments        Comment[]
  metricsReceipts MetricsReceipt[]
  userMetrics     UserMetrics?
  viewerWatchEvents ViewerWatchEvent[]
  intisBalance    IntisBalance?
  intisLedgers    IntisLedger[]
}

model Video {
  id    Int    @id @default(autoincrement())
  title String
  url   String
  likes Int    @default(0)

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Pet {
  id        String  @id @default(cuid())
  size      Float   @default(1.0)
  hearts    Int     @default(1)
  lastFed   DateTime?

  user      User    @relation(fields: [userId], references: [id])
  userId    String  @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StreamSession {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  startTime DateTime
  endTime   DateTime?

  durationMs Int @default(0) // calcular en la app al finalizar

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación inversa para los regalos asociados a esta sesión
  gifts Gift[]

  //agregado comentario|

  @@index([userId])
  @@index([startTime])
  @@index([userId, startTime])
}

model StreamerMetrics {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  totalMs       Int       @default(0)
  totalSessions Int       @default(0)
  currentLevel  Int       @default(1)
  lastLevelUpAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// Métricas unificadas por usuario (viewer/streamer)
model UserMetrics {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // acumulados de streamer
  totalMs       Int      @default(0)
  totalSessions Int      @default(0)

  // acumulados de viewer
  watchTotalMs  Int      @default(0)

  // nivel y progreso (0-100)
  currentLevel  Int      @default(1)
  progressPct   Int      @default(0)
  lastLevelUpAt DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

// Eventos de visualización del viewer (para recálculo)
model ViewerWatchEvent {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  msWatched  Int
  occurredAt DateTime @default(now())
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([occurredAt])
}

// Intis balance por usuario
model IntisBalance {
  userId    String  @id
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance   Int     @default(0)
  updatedAt DateTime @default(now())
}

// Ledger opcional para auditoría
model IntisLedger {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Int
  reason    String?
  createdAt DateTime @default(now())

  @@index([userId])
}

// Recibos/idempotencia para cierres de sesión
model MetricsReceipt {
  id        String    @id @default(cuid())
  userId    String
  bucketKey String // e.g. userId:minBucket:durationMs
  applied   Boolean   @default(false)
  createdAt DateTime  @default(now())
  appliedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bucketKey])
  @@index([userId])
}

model AudienceLevel {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  level           Int     @default(1)
  name            String
  description     String?
  viewPermissions Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, level])
  @@index([userId])
}

model Gift {
  id    String @id @default(cuid())
  name  String
  emoji String
  coins Int

  receiverId String
  receiver   User   @relation("ReceiverUser", fields: [receiverId], references: [id], onDelete: Cascade)

  senderId String?
  sender   User?   @relation("SenderUser", fields: [senderId], references: [id], onDelete: SetNull)

  streamSessionId String?
  streamSession   StreamSession? @relation(fields: [streamSessionId], references: [id], onDelete: SetNull)

  message  String?
  quantity Int     @default(1)

  createdAt DateTime @default(now())

  @@index([receiverId])
  @@index([senderId])
  @@index([streamSessionId])
}

model Comment {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

